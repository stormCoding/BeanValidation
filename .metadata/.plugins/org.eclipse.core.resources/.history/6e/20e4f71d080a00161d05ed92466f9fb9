package com.example.basicvalidator;

/**
 * @Description : besic Valdation example
 * @author      : 조원태
 * @date        : 2016. 4. 24.
 */
public class Main {

    /**
     * @Title: adctDispInqyInfo1010
     * @date 2015. 8. 28.
     * @param paramMap
     * @param model
     * @return
     * @throws Exception
     */
    public static void main(String[] arg) throws Exception {
        Main main = new Main();
        
        User user = new User();
        user.setName(null);
        user.setAge(0);
        // test
        main.validate(user);
    }
    /**
     * <pre>
     * 1. 기능설명 : 조회순서설정-화면조회
     * 2. 작성자 : 박지수
     * 3. 로직처리 :
     *    1)
     *    2)
     * </pre>
     * @Title: adctDispInqyInfo1010
     * @date 2015. 8. 28.
     * @param paramMap
     * @param model
     * @return
     * @throws Exception
     */
    public void validate(User user) throws Exception {
        //---------------------------------------------------------------
        // 공개범위설정수정처리
        //---------------------------------------------------------------
        if(user.getName() == null) {
            throw new IllegalArgumentException("이름은 필수 정보입니다.");
        }
        
        //---------------------------------------------------------------
        // 공개범위설정수정처리
        //---------------------------------------------------------------
        if(user.getAge() < 19) {
            throw new IllegalArgumentException("나이는 19살 이상이어야 합니다.");
        }
    }

}